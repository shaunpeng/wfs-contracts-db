<div class="container">

<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-8"><h1>Supply Contracts</h1></div>
  <div class="bottom-align-right col-xs-6 col-md-4">
    <%= button_to 'Create New', new_contract_path, method: :get, class:"btn btn-primary pull-right" %>
  </div>
</div>

<br>

<table class="table table-striped table-hover table-sm">
  <thead>
    <tr>
      <th>Contract ID</th>
      <th>Start Date</th>
      <th>Product</th>
      <th>Status</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.contract_id %></td>
        <td><%= contract.supplier %></td>
        <td><%= contract.product %></td>
        <td><%= contract.status %></td>
        <td>
          <div class="dropdown pull-right">
            <button class="btn btn-default btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> &nbsp;
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><%= link_to 'Details', contract %></li>
              <li><%= link_to 'Edit', edit_contract_path(contract) %></li>
              <li>
                <%= link_to 'Delete', set_status_inactive_contract_path(contract), method: :put, data: { confirm: 'Are you sure?' } %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>