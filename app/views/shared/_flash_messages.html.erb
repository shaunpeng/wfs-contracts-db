<div class="container">
  <div class="row">
    <% flash.each do |type, message| %>
      <div class="message-center alert alert-<%= bootstrap_flash_class(type) %> fade in">
        <button class="close" data-dismiss="alert">x</button>
        <%= message %>
      </div>
    <% end %>
  </div>
</div>
<br>