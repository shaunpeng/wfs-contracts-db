<%= form_for cfile_obj, :html => { multipart: true, :class => "form-horizontal cfile" } do |f| %>

  <% if cfile_obj.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(cfile_obj.errors.count, "error") %> prohibited this cfile from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% cfile_obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :document, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <div class="controls">
        <input type="text" class="form-control" readonly=true value="<%=cfile_obj.document %>" >
        <%= f.file_field :document, accept: 'image/jpeg,application/pdf,image/png' %>
        <%= f.hidden_field :document_cache %>
      </div>
    </div>
    <%=f.error_span(:document) %>
  </div>
  <div class="form-group">
    <%= f.label :contract_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.hidden_field :contract_id, :value => @contract.id %>
    </div>
    <%=f.error_span(:contract_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cfiles_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
